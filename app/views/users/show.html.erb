<title><%= "#{current_user.email}'s Console" %></title>

<h1>User Show</h1>

<%= image_tag @user.image_url(:thumb) %>

<% if @user == current_user %>
  <%= form_for @user, :html => { :multipart => true } do |f| %>
    <%= f.file_field :image %>
    <br />
    <%= f.submit "Upload" %>
  <% end %>
<% end %>

<%= @user.email %>

<% if @user == current_user %>
  <%= render 'posts/post' %>
<% end %>

<% @user.posts.each do |post| %>
  <%= image_tag post.image_url(:main) %><br />
  <%= post.title %><br />
  <%= post.content %><br />
    
    <%= form_for post do |f| %>
      <%= f.button :likes %>
    <% end %>
  likes: <%= post.likes.to_s %><br />

<% end %>